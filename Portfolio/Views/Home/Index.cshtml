@{
    ViewData["Title"] = "Home Page";
}
@using Portfolio.Models;
@using System.Collections.Generic;
@model List<GithubRepo>

<script type="text/javascript" src="~/js/Home.js"></script>

<h1 class="text-center text-capitalize">Welcome To Cameron Anderson's Portfolio!</h1>

<hr />
<br />
<br />

<div class="projects">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="indicator"></li>
            }
        </ol>
        <h2 class="text-center popover-title" id="carousel-title">Check out some of my projects!</h2>

        <div class="carousel-inner" role="listbox">

            @foreach (GithubRepo repo in Model)
            {
                <div class="item    ">
                    <div class="carousel-content text-center">
                        <h3 class="text-center project-title text-capitalize">@repo.Name</h3>
                        <a class="btn btn-info" target="_blank" href="@repo.Html_Url">Take me to github!</a> <br />
                        <h5>@repo.Description</h5>
                        <br /><br />
                        <br />
                    </div>
                </div>

            }


        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3 info-btn info-btn-about">About Me</div>
    <div class="col-md-3 info-btn info-btn-contact">Contact Me</div>
